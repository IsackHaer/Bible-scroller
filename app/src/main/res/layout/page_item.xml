<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageScrollerH_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/image_item" />

    <TextView
        android:id="@+id/bibleName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/Cinzel_16dp"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageScrollerH_rv"
        app:layout_constraintStart_toStartOf="@+id/imageScrollerH_rv"
        app:layout_constraintTop_toBottomOf="@+id/imageScrollerH_rv"
        tools:text="Thomas Nelson Bible" />

    <TextView
        android:id="@+id/bibleTranslation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAlignment="viewStart"
        android:textAppearance="@style/Cinzel_16dp"
        app:layout_constraintStart_toStartOf="@+id/bibleName_tv"
        app:layout_constraintTop_toBottomOf="@+id/bibleName_tv"
        tools:text="Translation: \nnkjv" />

    <TextView
        android:id="@+id/bibleMaterial_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/Cinzel_16dp"
        app:layout_constraintStart_toStartOf="@+id/bibleTranslation_tv"
        app:layout_constraintTop_toBottomOf="@+id/bibleTranslation_tv"
        tools:text="Material: \nleather" />

    <TextView
        android:id="@+id/bibleColor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/Cinzel_16dp"
        app:layout_constraintStart_toStartOf="@+id/bibleMaterial_tv"
        app:layout_constraintTop_toBottomOf="@+id/bibleMaterial_tv"
        tools:text="Color:\nbrown" />

</androidx.constraintlayout.widget.ConstraintLayout>